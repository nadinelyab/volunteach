	<div class = "container">
		<div class="row text-center">
			<div class="col-md-12">
			<h1>Why VolunTeach?</h1><br><br>
			<%= image_tag "info_educ.png", size: "1000x1000", style: "opacity: 0.7;" %>
			<div style="margin-top: 40px">
			<a href= "http://www.teach.com" class="btn btn-danger btn-xlarge">Learn More about Teaching!</a>
			<%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-success btn-xlarge" %><br>
			</div>
			</div>
		</div>
	</div>
</div>
