<div class='container'>
<div class='row'>
<% if current_user.category == "school" %>
	<span style="float: right; margin-top: 20px;"><%= link_to 'Add a New School', new_school_path, class: "btn btn-default" %></span>
<% end %>
<% near = School.near([current_user.latitude, current_user.longitude], 20) %>
<h1>Schools in Need Near You</h1>
<% if near.empty? %>
	<h4>Sorry, there are no schools near you yet</h4>
<% else %>
	<% near.each do |school| %>
		<%= render 'schools/school_show', school: school %>
	<% end %>
<% end %>

<h1>All Schools in Need</h1>
	<%= render 'school_search' %>

<% @schools.each do |school| %>
	<%= render 'schools/school_show', school: school %>
<% end %>