<div class="panel panel-default">
	<div class="panel body">
		<div class="container">
			<span style="float: right"><%= link_to 'View', school_path(school), class: "btn btn-dark" %></span>
			<h4><%= school.school_name %></h4>
			<p>Student Age: <%= school.students_age %></p>
			<% if current_user == school.user %>
				<%= link_to 'Edit', edit_school_path(school), class: "btn btn-dark" %>
				<%= link_to 'Delete', school_path(school), method: :delete, data: {confirm: 'Are you sure you want to delete this school?'}, class: "btn btn-dark" %>
			<% end %>
		</div>
	</div>
</div>