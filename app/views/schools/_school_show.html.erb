<div class="container">
	<div class="row">
		<div class="col-md-1">
			<i class="fa fa-bus fa-4x"></i>
		</div>




		<div class="col-md-11">
			<div class="panel panel-default">
				<div class="panel body">
					<span class="pull-right", style="margin-right: 5px"><%= link_to 'View', school_path(school), class: "btn btn-dark" %></span>
						<div class="container">
							<h4 style = "display: inline-block"><%= school.school_name %></h4>
								
							<p>Location: <%= school.location %></p>
							<p>Added by <%= link_to school.user.name, user_path(school.user) %></p>
								<% if current_user == school.user %>
									<%= link_to 'Edit', edit_school_path(school), class: "btn btn-default" %>
									<%= link_to 'Delete', school_path(school), method: :delete, data: {confirm: 'Are you sure you want to delete this school?'}, class: "btn btn-default" %>
								<% end %>
							<% if current_user.category == "volunteer" %>
								<%= link_to 'I Taught At this School', school_link_form_path(school), class: "btn btn-dark" %> 
							<%end %>
						</div>
				</div>
			</div>
		</div>
	</div>
</div>
