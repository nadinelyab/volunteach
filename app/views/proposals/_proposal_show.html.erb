<div class="container">
	<div class="row">
		<div class="col-md-1">
			<%= image_tag proposal.user.photo %>
		</div>

		<div class="col-md-11">

			<div class="panel panel-default">
				<div class="panel body">
					<span class="pull-right", style="margin-right: 5px"><%= link_to 'View', proposal_path(proposal), class: "btn btn-dark" %></span>
					<div class="container", style="font-size: 18px">
						<h3><%= proposal.topic %></h3>

						<p>Taught by: <%= link_to proposal.user.name, user_path(proposal.user) %></p>
						<p>Description: <%= proposal.description %></p>
						<p>Location: <%= proposal.user.location %></p>
						<% if current_user == proposal.user %>
							<%= link_to 'Edit', edit_proposal_path(proposal), class: "btn btn-dark" %>
							<%= link_to 'Delete', proposal_path(proposal), method: :delete, data: {confirm: 'Are you sure you want to delete this proposal?'}, class: "btn btn-dark" %>
							<%= link_to 'I Have Taught this Class', proposal_link_form_path(proposal), class: "btn btn-dark" %>
						<% end %>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>