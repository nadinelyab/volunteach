<p>Teacher Name: <%= @proposal.teacher_name %></p>
<p>Location: <%= @proposal.teacher_location %></p>
<p>Topic: <%= @proposal.topic %></p>
<p>Class Duration: <%= @proposal.duration %></p>
<p>Target Age: <%= @proposal.target_age %></p>
<p>Languages: <%= @proposal.language %></p>
<p>Description: <%= @proposal.description %></p>
<%= link_to 'See All Proposals', proposals_path %>
<% if current_user == @proposal.user %>
	|
	<%= link_to 'Edit', edit_proposal_path %>
	|
	<%= link_to 'Delete Proposal', proposal_path(@proposal), method: :delete, data: {confirm: 'Are you sure you want to delete this proposal?'} %>
<% end %>