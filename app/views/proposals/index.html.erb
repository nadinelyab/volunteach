<div class='container'>
	<div class='row'>
		<span style="float: right; margin-top: 20px;"><%= link_to 'Add a New Proposal', new_proposal_path, class: "btn btn-default" %></span>
		<% near = User.near([current_user.latitude, current_user.longitude], 20) %>
		<h1>Class Proposals from users near you:</h1>
		<% if near.empty? %>
			<h3>Sorry, no users have added class proposals near you</h3>
		<% else %>
			<% near.each do |user|%>
				<% user.proposals.each do |proposal| %>
					<%= render 'proposal_show', proposal: proposal %>
				<% end %>
			<% end %>
		<% end %>


<h1>All Class Proposals</h1>

	<%= form_tag(proposals_path, method: "get") do %>
	<%= label_tag(:query, "Search All Proposals:") %>
	<%= text_field_tag :query, params[@query], placeholder: "Topic, Description, Target Age, etc." %>
	<%= submit_tag "Search", class: "btn btn-default" %>
<% end %><br>
	</div>

	<div class="row">
		<% @proposals.each do |proposal| %>
			<%= render 'proposal_show', proposal: proposal %>
		<% end %>
	</div>
</div>
