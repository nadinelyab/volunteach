<% if @proposal.errors.present? %>
	<% @proposal.errors.full_messages.each do |msg| %>
		<p><%= msg %></p>
	<% end %>
<% end %>

<%= form_for @proposal do |f| %>
<p>
	<%= f.label "Topic*" %><br>
	<%= f.text_field :topic %>
</p>
<p>
	<%= f.label :class_duration %><br>
	<%= f.text_field :duration %>
</p>
<p>
	<%= f.label :target_age %><br>
	<%= f.text_field :target_age %>
</p>
<p>
	<%= f.label "Language(s)*" %><br>
	<%= f.text_field :language %>
</p>
<p>
	<%= f.label "Description*" %><br>
	<%= f.text_area :description %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>