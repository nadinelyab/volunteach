<div class="container" > 

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <h2 style="text-align: center">Sign Up</h2><hr>
        

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :multipart => true}) do |f| %>
        <%= devise_error_messages! %>

          <%= f.input :name, autofocus: true %>

          <%= f.input :username, autofocus: true %>

          <%= f.input :email, autofocus: true %>
        
          <%= f.input :location, autofocus: true, label: "Address", as: :text  %>

          <p><%= f.radio_button :category, 'school' %>
          <%= label :category_school, 'School' %></p>
          <p><%= f.radio_button :category, 'volunteer' %>
          <%= label :category_volunteer, 'volunteer' %></p><br>

          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.input :password, autocomplete: "off", wrapper_html: { id: 'password' } %>
        <br>

          <%= f.input :password_confirmation, autocomplete: "off", wrapper_html: { id: 'password' } %>
        <br>

        <%= f.file_field :photo %>

        <div style="text-align: center">
          <%= f.submit "Sign up", class: "btn btn-dark btn-lg" %><br><br>
          <p><%= render "devise/shared/links" %></p>
        </div><br>
      <% end %>

    </div>
  </div>
</div>
