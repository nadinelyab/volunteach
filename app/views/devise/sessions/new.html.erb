 <div class="container" > 

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <h2 style="text-align: center">Log in</h2><hr>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <%= f.input :email, autofocus: true %><br>

          <%= f.input :password, autocomplete: "off", wrapper_html: { id: 'password' } %>


          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%><br>

          <div style="text-align: center">
            <%= f.submit "Log in", class: "btn btn-dark btn-lg" %>
          </div>
        <% end %><br>

        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>