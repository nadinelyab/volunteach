<% if @message.errors.present? %>
	<% @message.errors.full_messages.each do |msg| %>
		<p><%= msg %></p>
	<% end %>
<% end %>

<% if current_user.category == "volunteer" %>
<%= form_tag new_user_message, method: :get do %>
<p>
	<%= label_tag(:query, "Search for a school to send your message:") %><br>
	<%= text_field_tag :query, params[:query], placeholder: "School Name, Location, Needs" %>
</p>
<% else %>
<%= form_tag new_user_message, method: :get do %>
<p>
	<%= label_tag(:query, "Search for a course to send your message:") %><br>
	<%= text_field_tag :query, params[:query], placeholder: "School Name, Location, Needs" %>
</p>

<% end %>
<%= form_for @message do |f| %>
<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :body %><br>
	<%= f.text_area :body %>
</p>
<p>
	<%= f.submit "Create message", class: "btn btn-dark" %>
</p>
<% end %>