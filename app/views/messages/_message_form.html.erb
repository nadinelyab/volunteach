<% if @message.errors.present? %>
  <% @message.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6">

      <%= form_for ([current_user, @message]) do |f| %>
        <p>
          <%= f.label "To:" %><br>
          <%= f.text_field :receiver_id, :value => @receiver %></p>
        <p>
          <%= f.label "Subject" %><br>
          <%= f.text_field :title %>
        </p>
        <p>
          <%= f.label :message %><br>
          <%= f.text_area :body %>
        </p>
        <p>
          <%= f.submit "Send Message", class: "btn btn-dark" %>
        </p>
      <% end %>
    </div>
  </div>
</div>