<div class = "container">
	<div class="panel panel-default">
			<div class="panel panel-heading">
				<h4>To: <%= User.find(@message.receiver_id).username %></h4>
				<h4>From: <%= User.find(@message.sender_id).username %></h4>
				<p>Subject: <%= @message.title %></p>
			</div>
			<div class="panel panel-body">
				<p><%= @message.body %></p>
			</div>
	</div>
	<h3>Reply</h3>
	<%= render 'messages/message_form' %>
</div>